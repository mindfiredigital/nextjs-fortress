{
  "name": "@mindfiredigital/nextjs-fortress",
  "version": "1.3.0",
  "private": false,
  "description": "Universal security validation framework for Next.js - Protects against CVE-2025-55182 and major attack vectors",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "fortress": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "nextjs",
    "security",
    "middleware",
    "validation",
    "cve-2025-55182",
    "prototype-pollution",
    "sql-injection",
    "xss",
    "csrf",
    "rate-limiting",
    "web-security",
    "application-security",
    "next.js",
    "react",
    "server-actions",
    "api-routes"
  ],
  "author": "Mindfire Digital",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mindfiredigital/nextjs-fortress.git"
  },
  "bugs": {
    "url": "https://github.com/mindfiredigital/nextjs-fortress/issues"
  },
  "homepage": "https://github.com/mindfiredigital/nextjs-fortress#readme",
  "peerDependencies": {
    "next": ">=12.0.0"
  },
  "dependencies": {
    "next": ">=12.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.19.27",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.9.3"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/cli/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "directories": {
    "test": "tests"
  },
  "type": "module"
}
